<ui:ContentDialog
    x:Class="JiumiTool2.Views.VideoConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JiumiTool2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:VideoConfigDialog}" />
    </ui:ContentDialog.Resources>

    <Grid Width="450" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ui:TextBox
            x:Name="PathTextBox"
            Grid.Column="0"
            Margin="5"
            IsReadOnly="True"
            PlaceholderText="Try doing something..." />
        <ui:Button
            Grid.Column="1"
            Margin="5"
            Click="SelectDownloadPath"
            Content="选择下载路径" />
    </Grid>
</ui:ContentDialog>
